<html>
    <head>
        <title>{{ pageTitle }} {{ h.defaultPageTitle }}</title>
        <link rel="stylesheet" href="/assets/css/style.css" />
    </head>
    <body>
        <header>
            <h1>Header</h1>

            {{ #user }}
                Hi, {{ user.name }}! <a href="/users/logout">Logout</a>
            {{ /user }}

            <hr>
                <ul>
                    {{ #h.menu }}
                        <li><a href="{{ slug }}">{{ name }}</a></li>
                    {{ /h.menu }}
                </ul>
            <hr>
        </header>

        {{ #flashes }}
            {{ #success }}
                <div class="warning">{{ . }}</div>
            {{ /success }}

            {{ #error }}
                <div class="warning">{{ . }}</div>
            {{ /error }}

            {{ #info }}
                <div class="warning">{{ . }}</div>
            {{ /info }}
        {{ /flashes }}
    </body>
</html>

