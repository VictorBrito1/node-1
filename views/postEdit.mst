{{> header }}

<h2>Post edit</h2>

<form method="POST">
    <label>
        Title:
        <input type="text" name="title" value="{{ post.title }}"/>
    </label>
    <br/>

    <label>
        Body:
        <textarea name="body">{{ post.body }}</textarea>
    </label>
    <br/>

    <label>
        Tags:
    </label>
    <br/>

    <input type="submit" value="Create"/>
</form>